@model LendYourHome.Services.ServiceModels.Homes.PersonalHomeDetailsServiceModel

@{
    ViewData["Title"] = "Your Home Details";
}

@{
    var homeOfferStatus = Model.IsActiveOffer ? "ACTIVE" : "INACTIVE";
}

<div id="personal-home" class="wrapper">
    <h2 class="page-header centered">@ViewData["Title"]</h2>
    <div class="row">
        <h4 class="centered">Your Home Offer is <strong>@homeOfferStatus</strong></h4>
        <div id="myCarousel" class="carousel slide col-sm-4 col-xs-10 col-xs-offset-4" data-ride="carousel">
            <!-- Indicators -->
            <ol class="carousel-indicators">
                @for (int i = 0; i < Model.HomePicturesUrls.Count(); i++)
                {
                    if (i == 0)
                    {
                        <li data-target="#myCarousel" data-slide-to="@i" class="active"></li>
                    }
                    else
                    {
                        <li data-target="#myCarousel" data-slide-to="@i"></li>
                    }
                }
            </ol>

            <!-- Wrapper for slides -->
            <div class="carousel-inner">
                @for (int i = 0; i < Model.HomePicturesUrls.Count(); i++)
                {
                    <div class="item @(i == 0 ? "active" : "")">
                        <img src="@Model.HomePicturesUrls[i]" alt="Los Angeles" class="img-responsive">
                    </div>
                }
            </div>

            <!-- Left and right controls -->
            <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#myCarousel" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
    <div class="row">
        <dl class="dl-horizontal col-sm-6 col-xs-offset-3">
            <dt>
                @Html.DisplayNameFor(model => model.Country)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Country)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.City)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.City)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Address)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Address)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Sleeps)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Sleeps)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Bedrooms)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Bedrooms)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Bathrooms)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Bathrooms)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.PricePerNight)
            </dt>
            <dd>
                &euro;@Html.DisplayFor(model => model.PricePerNight)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Additionalnformation)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Additionalnformation)
            </dd>
        </dl>
    </div>
    <div id="home-cotrol-buttons " class="centered">
        <a asp-area="Host" asp-controller="Home" asp-action="Edit" class="btn btn-warning">Edit</a>
    </div>
</div>
