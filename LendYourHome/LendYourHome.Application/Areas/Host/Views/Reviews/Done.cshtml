@model IEnumerable<LendYourHome.Services.ServiceModels.Reviews.DoneGuestReviewServiceModel>

@{
    ViewData["Title"] = "Done Guest Reviews";
}

<div id="done-reviews" class="wrapper">
    @if (Model.Any())
    {
        <h2 class="page-header centered">Your Done Guest Reviews</h2>
        <div class="row">
            <div class="col-sm-6 col-xs-offset-3 list-group">
                @foreach (var review in Model)
                {
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            You Rated
                            <a asp-area="" asp-controller="Users" asp-action="Details" asp-route-id="@review.GuestId">@review.GuestName </a>
                            with <strong>@review.Evaluation</strong> <span class="glyphicon glyphicon-star"></span> <span class="text-muted pull-right">On @review.SubmitDate.ToShortDateString()</span>
                        </div>
                        <div class="panel-body">
                            <p>Title: @review.Title</p>
                            <p>@review.AdditionalThoughts</p>
                        </div>
                    </div>
                }
            </div>
        </div>
    }
    else
    {
        <h2 class="page-header centered">Your Have No Done Guest Reviews</h2>
    }
</div>

