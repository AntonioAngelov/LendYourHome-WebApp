@model LendYourHome.Application.Areas.Host.Models.Reviews.DoneGuestReviewsViewModel

@{
    ViewData["Title"] = "Done Guest Reviews";
}

@{
    var previousPageDisabled = Model.PageListingData.CurrentPage == 1 ? "disabled" : string.Empty;
    var nextPageDisabled = Model.PageListingData.CurrentPage == Model.PageListingData.TotalPages || Model.PageListingData.TotalPages == 0 ? "disabled" : string.Empty;
}

<div id="done-reviews" class="wrapper">
    @if (Model.Reviews.Any())
    {
        <h2 class="page-header centered">Your Done Guest Reviews</h2>
        <div class="row">
            <div class="col-sm-6 col-xs-offset-3 list-group">
                @foreach (var review in Model.Reviews)
                {
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            You Rated
                            <a asp-area="" asp-controller="Users" asp-action="Details" asp-route-id="@review.GuestId">@review.GuestName </a>
                            with <strong>@review.Evaluation</strong> <span class="glyphicon glyphicon-star"></span> <span class="text-muted pull-right">On @review.SubmitDate.ToShortDateString()</span>
                        </div>
                        <div class="panel-body">
                            <p>Title: @review.Title</p>
                            <p>@review.AdditionalThoughts</p>
                        </div>
                    </div>
                }
            </div>
        </div>

        <nav aria-label="..." class="centered-container">
            <ul class="pagination pagination-lg">
                <li class="page-item @previousPageDisabled">
                    <a class="page-link" href="/host/reviews/done?page=@Model.PageListingData.PreviousPage" tabindex="-1">Previous</a>
                </li>
                @for (int i = 1; i <= Model.PageListingData.TotalPages; i++)
                {
                    <li class="page-item @(i == Model.PageListingData.CurrentPage ? "active" : string.Empty)"><a class="page-link" href="/host/reviews/done?page=@i">@i</a></li>
                }
                <li class="page-item @nextPageDisabled">
                    <a class="page-link" href="/host/reviews/done?page=@Model.PageListingData.NextPage">Next</a>
                </li>
            </ul>
        </nav>
    }
    else
    {
        <h2 class="page-header centered">Your Have No Done Guest Reviews</h2>
    }
</div>

