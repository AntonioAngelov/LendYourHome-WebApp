@model IEnumerable<LendYourHome.Services.ServiceModels.Bookings.GuestBookingServiceModel>

@{
    ViewData["Title"] = "Your Approved Bookings";
}
<div id="guest-booking" class="wrapper row">
    @if (@Model.Any())
    {
        <h2 class="page-header centered">@ViewData["Title"]</h2>
        <div class="list-group col-xs-8 col-sm-8 col-xs-offset-2">
            @foreach (var booking in Model)
            {
                <div class="list-group-item">
                    <h4 class="list-group-item-heading">Booking for 
                        <a asp-area="" asp-controller="Homes" asp-action="Details" asp-route-id="@booking.HomeId">@booking.OwnerUsername&apos;s home</a>
                        <a asp-area="" asp-controller="Messages" asp-action="New" asp-route-id="@booking.HostId" class="btn btn-warning pull-right">Message Host</a>
                    </h4>
                    <div class="list-group-item-text row">
                        <div class="col-sm-3">
                            <strong>Check in date:</strong> @booking.CheckInDate.ToShortDateString()
                        </div>
                        <div class="col-sm-3">
                            <strong>Check out date:</strong> @booking.CheckOutDate.ToShortDateString()
                        </div>
                        <div class="col-sm-3">
                            <strong>Price per night:</strong> &euro;@booking.PricePerNight
                        </div>
                        <div class="col-sm-3">
                            <strong>Total price:</strong> &euro;@booking.TotalPrice
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <h2 class="page-header centered">You Have No Approved Bookings</h2>
    }
</div>

