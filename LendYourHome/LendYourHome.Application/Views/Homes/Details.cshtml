@model LendYourHome.Services.ServiceModels.Homes.HomeDetailsServiceModel

@{
    ViewData["Title"] = "Details";
}

<div id="home-details-wrapper" class="wrapper">
    <h2 class="page-header centered">
        <a asp-area="" asp-controller="Users" asp-action="Details" asp-route-id="@Model.OwnerId">
            <img src="@Model.OwnerPictureUrl" alt="profile-picture" class="img-responsive">
            @Model.OwnerName&#39;s
        </a> home
    </h2>
    <div class="row">
        <div id="myCarousel" class="carousel slide col-sm-4 col-xs-10 col-xs-offset-1" data-ride="carousel">
            <!-- Indicators -->
            <ol class="carousel-indicators">
                @for (int i = 0; i < Model.HomesPicturesUrls.Count(); i++)
                {
                    if (i == 0)
                    {
                        <li data-target="#myCarousel" data-slide-to="@i" class="active"></li>
                    }
                    else
                    {
                        <li data-target="#myCarousel" data-slide-to="@i"></li>
                    }
                }
            </ol>

            <!-- Wrapper for slides -->
            <div class="carousel-inner">
                @for (int i = 0; i < Model.HomesPicturesUrls.Count(); i++)
                {
                    <div class="item @(i == 0 ? "active" : "")">
                        <img src="@Model.HomesPicturesUrls[i]" alt="Los Angeles" class="img-responsive">
                    </div>
                }
            </div>

            <!-- Left and right controls -->
            <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#myCarousel" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>



        <div class="col-sm-6">
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Country)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Country)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.City)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.City)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Address)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Address)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Sleeps)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Sleeps)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Bedrooms)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Bedrooms)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Bathrooms)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Bathrooms)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.PricePerNight)
                </dt>
                <dd>
                    &euro;@Html.DisplayFor(model => model.PricePerNight)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Additionalnformation)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Additionalnformation)
                </dd>
            </dl>
        </div>

    </div>
    
    <div id="book-home-container" class="row">
        <a asp-area="Guest" asp-controller="Bookings" asp-action="Create" asp-route-id="@Model.Id" class="btn btn-warning col-sm-6 col-xs-6 col-xs-offset-3">Book this home</a>
    </div>
</div>